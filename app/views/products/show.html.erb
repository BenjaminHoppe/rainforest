<%= render 'products/product', this_product: @product  %>
<br/>
<ul>
  <% @reviews.each do |review| %>
    <li><%= render 'reviews/review', review: review %></li>
    <%= link_to 'Edit Review', edit_product_review_path(@product.id, review.id) %> | <%= link_to("Delete Review", product_review_path(@product, review), method: :delete, data: {confirm: "Are you sure you want to delete this review?"})  %>
  <% end %>
</ul>

  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

  <%= render 'reviews/review_form', review: @review %>
<%= link_to 'Edit',  edit_product_path(@product) %> | <%= link_to("Delete Product", "/products/#{@product.id}", method: :delete, data: {confirm: "Are you sure you want to delete this product?"})  %>
