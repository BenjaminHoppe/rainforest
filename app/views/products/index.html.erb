<h2>Products: <%=@products.all.count%></h2>
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<ul>
  <% @products.each do |product| %>
    <li>
      <div class="card"><%= render 'product', this_product: product %></div>
    </li>
    <%end%>
</ul>

<%= link_to 'Add Product',  new_product_path %>
